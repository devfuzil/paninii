{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "node scripts/build-vercel-api.mjs && npx vite build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "^/((?!api/).*)$", "destination": "/index.html" }
  ],
  "functions": {
    "api/trpc/[...path].ts": { "maxDuration": 60 },
    "api/webhook/misticpay.ts": { "maxDuration": 30 }
  }
}
